%html
%body
  %h1 New Booking
  %h2 Customer information:
  %ul
    %li
      %strong Name:
      #{@booking.first_last_name}
    %li
      %strong Passengers:
      #{@booking.passengers}
    %li
      %strong Telephone number:
      #{@booking.telephone_number}
    %li
      %strong From:
      #{@booking.from.name}
    %li
      %strong To:
      #{@booking.to.name}
    %li
      %strong Depart date:
      #{@booking.depart_date}
    %li
      %strong Return date:
      #{@booking.return_date}
    %li
      %strong Private shuttle?
      #{@booking.private_shuttle ? 'Yes' : 'No'}
    %li
      %strong Home pickup?
      #{@booking.home_pickup ? 'Yes' : 'No'}
    %li
      %strong Home drop off?
      #{@booking.home_dropoff ? 'Yes' : 'No'}
    %br
    %li
      %strong Home pickup address
      #{@booking.home_address.presence || 'N/A'}
    %li
      %strong Pickup city
      #{@booking.pickup_city.presence || 'N/A'}
    %li
      %strong Zipcode:
      #{@booking.zipcode.presence || 'N/A'}
    %br
    %li
      %strong Pick up from #{@booking.from.name} to #{@booking.to.name}
    %li
      %strong Address
      #{@booking.home_address.presence || 'N/A'}
    %li
      %strong City
      #{@booking.pickup_city.presence || 'N/A'}
    %li
      %strong Zipcode:
      #{@booking.zipcode.presence || 'N/A'}
    %br
    %li
      %strong Drop off from #{@booking.from.name} to #{@booking.to.name}
    %li
      %strong Address
      #{@booking.round_trip_source_address.presence || 'N/A'}
    %li
      %strong City
      #{@booking.round_trip_source_city.presence || 'N/A'}
    %li
      %strong Zipcode
      #{@booking.round_trip_source_zipcode.presence || 'N/A'}
    %br
    %li
      %strong Pick up from #{@booking.to.name} to #{@booking.from.name}
    %li
      %strong Address
      #{@booking.dest_address.presence || 'N/A'}
    %li
      %strong City
      #{@booking.dest_city.presence || 'N/A'}
    %li
      %strong Zipcode
      #{@booking.dest_zipcode.presence || 'N/A'}
    %br
    %li
      %strong Drop off from #{@booking.to.name} to #{@booking.from.name}
    %li
      %strong Address
      #{@booking.round_trip_dest_address.presence || 'N/A'}
    %li
      %strong City
      #{@booking.round_trip_dest_city.presence || 'N/A'}
    %li
      %strong Zipcode
      #{@booking.round_trip_dest_zipcode.presence || 'N/A'}



