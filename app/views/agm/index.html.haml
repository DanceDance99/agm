= stylesheet_link_tag 'index.css'
.container.container-bg.border-bottom
  %h2 Shuttle Transportation
  .row
    #shuttle-service-carousel.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#shuttle-service-carousel"}
        %li{"data-slide-to" => "1", "data-target" => "#shuttle-service-carousel"}
        %li{"data-slide-to" => "2", "data-target" => "#shuttle-service-carousel"}
      / Slider Content (Wrapper for slides )
      .carousel-inner
        .item.active
          = image_tag('express.jpg')
          .carousel-caption
            %h3 We provide luxurious and comfortable express transportation to the following destinations:
            %h4 Las Vegas, Hollywood, Glendale
            %h5 No need to worry, just sit back, relax and allow our professionals to escort you safely to your destination.
      / Controls
      %a.left.carousel-control{"data-slide" => "prev", href: "#shuttle-service-carousel"}
        %span.glyphicon.glyphicon-chevron-left
      %a.right.carousel-control{"data-slide" => "next", href: "#shuttle-service-carousel"}
        %span.glyphicon.glyphicon-chevron-right
  .row
    .h3.blue-heading RESERVE SHUTTLE NOW
