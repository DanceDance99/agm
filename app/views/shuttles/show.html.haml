    .tour-details.col-md-3
      .row.margin-bottom
        .pricing.text-center
          %h3 Pricing
          %p We offer affordable shuttle service whether you're traveling with us one way or round trip.
          #pricing-reservations
            %ul
              %li.large-text
                One way:               
                %span.pricing-reservations-large-price $39
              %li.large-text
                Round trip:            
                %span.pricing-reservations-large-price $69
            %p.text-center
              %strong Please call us for reservations
            .text-center
              %h3#pricing-reservations-telephone 702 327 9922
            %ul.list-inline.text-center
              %li
                = image_tag("visa_logo.png")
              %li
                = image_tag("mastercard_logo.png")
              %li
                = image_tag("americanexpress_logo.png")
              %li
                = image_tag("discover_logo.png")
            %small All phone payments are processed securely
            %button#booking_modal_button.btn.btn-primary.btn-lg{"data-shuttle-id" => @shuttle.id, "data-target" => "#booking_modal", "data-toggle" => "modal"}
              Book shuttle service
            #booking_modal.modal.fade.large{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
              .modal-dialog
                .modal-content
                  .modal-header
                    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} ×
                    %h4#myModalLabel.modal-title Book a shuttle
                  .modal-body
                    %p Book this shuttle online or call us at 702 327 9922
                    %p.mini-text Pricing is for both adults and children
                    = bootstrap_form_for([@shuttle, @booking], html: { id: 'payment-form'}, remote: true) do |f|
                      =render :partial => 'bookings/form', :locals => {:form => f}
                      %span.payment-errors
                      .form-group
                        = label_tag :card_number, 'Credit card number:'
                        = text_field_tag :card_number, nil, name: nil, class: 'form-control', data: {stripe: 'number'}
                      .form-group
                        = label_tag :security_code, 'Security code:'
                        = text_field_tag :security_code, nil, name: nil, class: 'form-control', data: {stripe: 'cvc'}
                      .form-group
                        = label_tag :exp_date, 'Expiration:'
                      .form-group
                        = select_month(Date.today, {add_month_numbers: true},  class: 'form-control', data: {stripe: 'exp-month'})
                        = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 4}, class: 'form-control', data: {stripe: 'exp-year'})
                      .modal-footer
                      .form-group.center
                        %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
                        = f.submit 'Book Tour', class: 'button btn btn-primary'
